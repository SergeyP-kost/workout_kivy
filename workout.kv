

<Container>
    rows: 5

    gridLayout_workout: gridLayout_workout

    stopwatch: stopwatch

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: .5
        padding: [10, 0, 10, 0]

        AnchorLayout:
            anchor_y: 'top'
            size_hint_y: .6
            Label:
                text: 'Тренировка'
                font_size: '40sp'

        BoxLayout:
            size_hint_y: .3

            Label:
                id: stopwatch
                text: '00:00'
                font_size: '25sp'
            Button:
                size_hint_x: .5
                text: 'Пуск'

                on_release:
                    root.time_workout_start()
            Button:
                size_hint_x: .5
                text: 'Пауза'

                on_release:
                    root.time_workout_pause()
            Button:
                size_hint_x: .5
                text: 'Стоп'

                on_release:
                    root.time_workout_stop()

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .3

            Label:
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                text: 'УПРАЖНЕНИЕ'
            Label:
                size_hint_x: .4
                text: 'ПЛАН'
            Label:
                size_hint_x: .4
                text: 'СДЕЛАНО'
            Label:
                size_hint_x: .4
                text: 'ПОДХОД'

    GridLayout:
        id: gridLayout_workout
        rows: 20
        padding: [10, 0, 10, 0]

    GridLayout:
        rows: 2
        size_hint_y: .2
        padding: [10, 10, 10, 10]

        ToggleButton:
            on_state: self.background_color = 0, 0, 0.1, .8
            on_state: self.text = 'Вперед к своей цели!'
            text: 'Начать'
            font_size: '20sp'

            on_release:
                root.start_workout()


        FloatLayout:

            Button:
                text: 'Добавить'
                size_hint: .5, 1
                pos_hint: {'x': 0, 'y': 0}

                on_release:
                    root.add_number()

            Button:
                text: 'Сброс'
                size_hint: .5, 1
                pos_hint: {'x':.5, 'y': 0}

                on_release:
                    root.reset()
